<Window x:Class="XPicManager.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XPicManager"
        mc:Ignorable="d"
        Title="Page3Test" Height="300" Width="300" MaxHeight="300" MinHeight="200" MaxWidth="300" MinWidth="200">
    <!--StackPanel是最简单的布局容器,简单的的单行或单列中放置元素-->
    <Border Margin="5" Padding="5" Background="Snow" BorderBrush="LightBlue" 
            BorderThickness="3,5,3,5" CornerRadius="30">
        <DockPanel LastChildFill="True">
            <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right"
                        Orientation="Horizontal">
                <!--<Button Margin="10,10,12,10" Padding="3">OK</Button>-->
                <Button Margin="10,10,2,10" Padding="3" MinWidth="48" Click="Button_Click">OK</Button>
                <Button Margin="2,10,10,10" Padding="3">Cancel</Button>
            </StackPanel>
            <TextBox DockPanel.Dock="Top" Background="Wheat" Margin="10" FontSize="20">This is a test</TextBox>
        </DockPanel>
    </Border>
</Window>
