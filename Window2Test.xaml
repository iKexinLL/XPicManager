    <Border Margin="5" Padding="5" Background="Snow" BorderBrush="Snow"
            BorderThickness="3,5,3,5" CornerRadius="30">
        <Grid ShowGridLines="True" Grid.IsSharedSizeScope="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            
            <Grid ShowGridLines="True" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" SharedSizeGroup="TextLabel"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox Margin="5" Grid.Column="0">A very long text in this label</TextBox>
                <GridSplitter Grid.Column="1" Width="3" Background="Black"
                              HorizontalAlignment="Center" VerticalAlignment="Stretch"></GridSplitter>
                <Label Grid.Column="2" Margin="5">More text</Label>
                <TextBox Grid.Column="3" Margin="5">A text box</TextBox>
            </Grid>
            
            <Grid Grid.Row="1" ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" SharedSizeGroup="TextLabel"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition ></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox Margin="5" Grid.Column="0">Same width as up</TextBox>
                <GridSplitter Grid.Column="1" Width="3" Background="Black"
                              HorizontalAlignment="Center" VerticalAlignment="Stretch"></GridSplitter>
                <TextBox Grid.Column="2" Margin="5">An other text box</TextBox>
            </Grid>

        </Grid>
    </Border>
</Window>
